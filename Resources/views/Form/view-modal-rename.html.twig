{# MODAL:RENAME-FILE #}
<div class="modal fade article-modal article-modal--rename" id="modalRenameFile" tabindex="-1" role="dialog"
     aria-labelledby="modalRenameFileLabel"
     aria-hidden="true">

    {# MODAL:DIALOG #}
    <div class="modal-dialog">

        {# MODAL:CONTENT #}
        <div class="modal-content">

            {# MODAL:HEADER #}
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="modalRenameFileLabel">{{ 'edit'|trans }}</h4>
            </div>
            {# //MODAL:HEADER #}

            {# MODAL:BODY #}
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="form-group">
                        <input type="text" class="form-control article-modal__text" id="fileName" />
                    </div>
                    <div class="form-group">
                        <textarea class="form-control article-modal__textarea" rows="5" id="description"></textarea>
                    </div>
                </div>
            </div>
            {# MODAL:BODY #}

            {# MODAL:FOOTER #}
            <div class="modal-footer">
                <button type="button" class="btn btn-success do-rename-file" data-file-id="0">{{ 'dropzone.save'|trans }}</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'dropzone.cancel'|trans }}</button>
            </div>
            {# MODAL:FOOTER #}

        </div>
        {# //MODAL:CONTENT #}

    </div>
    {# //MODAL:DIALOG #}

</div>
{# //MODAL:RENAME-FILE #}