        {#{% if thumbnailWidth %}#}
        {#.glavweb {#}
        {#height: {{ thumbnailHeight  }}px;#}
        {#position: relative;#}
        {#}#}
        {#.glavweb-outer {#}
        {#width: {{ thumbnailWidth  }}px;#}
        {#height: {{ thumbnailHeight  }}px;#}
        {#position: absolute;#}
        {#overflow: hidden;#}
        {#}#}

        {#.glavweb-inner {#}
        {#height: 500%;#}
        {#width: 100%;#}
        {#position: absolute;#}
        {#top: -200%;#}
        {#}#}

        {#.glavweb-img {#}
        {#display: block;#}
        {#position: absolute !important;#}
        {#width: 100%;#}
        {#height: auto;#}
        {#left: 0; top: 0; bottom: 0; right: 0;#}
        {#margin: auto;#}
        {#}#}
        {#{% endif %}#}

        {#.dz-details__img {#}
        {#position: relative;#}
        {#}#}
        {#.dz-preview {#}
        {#padding: 0 !important;#}
        {#width: {% if thumbnailWidth %}{{ thumbnailWidth  }}px {% else %}100%{% endif %} !important;#}

        {#display: block;#}
        {#float: left;#}
        {#margin-right: 30px;#}
        {#}#}

        {#.dz-progress {#}
        {#display: none !important;#}
        {#}#}
        {#.dz-button._remove {#}
        {#position: absolute;#}
        {#top: 0;#}
        {#right: 0;#}
        {#z-index: 1000;#}
        {#}#}
        {#.dz-rename.btn,#}
        {#.dz-rename.btn:hover,#}
        {#.dz-rename.btn:focus {#}
        {#background: #fff;#}
        {#box-shadow: none;#}
        {#border: none;#}
        {#}#}

        {#.dz-filename-wr {#}
        {#display: block;#}
        {#position: relative;#}
        {#z-index: 1;#}
        {#height: 25px;#}
        {#overflow: hidden;#}
        {#}#}

        {#.dz-button._rename {#}
        {#position: absolute;#}
        {#top: -3px;#}
        {#right: 0;#}
        {#z-index: 3;#}
        {#}#}

        {#.js-file-upload-hide {#}
        {#display: none;#}
        {#}#}

        {#.js-reached-limit-message {#}
        {#color: #ff0000;#}
        {#}#}
        {#.uploading-error {#}
        {#margin: 20px 0;#}
        {#}#}
        {#.uploading-error__text {#}
        {#color: #ff0000;#}
        {#}#}

        {#.hidden {#}
        {#display: none;#}
        {#}#}
        {#</style>#}

    {% endblock %}

