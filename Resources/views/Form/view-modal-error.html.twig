{# MODAL:REMOVE-FILE #}
<div class="modal fade article-modal article-modal--remove" id="modalErrorFile" tabindex="-1" role="dialog"
     aria-labelledby="modalErrorFileLabel"
     aria-hidden="true">

    {# MODAL:DIALOG #}
    <div class="modal-dialog">

        {# MODAL:CONTENT #}
        <div class="modal-content">

            {# MODAL:HEADER #}
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="modalRemoveFileLabel">{% trans %}dropzone.modal_title_error_size{% endtrans %}</h4>
            </div>
            {# //MODAL:HEADER #}

            {# MODAL:BODY #}
            <div class="modal-body">
                <p>{% trans %}dropzone.modal_error_size{% endtrans %}</p>
            </div>
            {# MODAL:BODY #}

            {# MODAL:FOOTER #}
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">{% trans %}dropzone.modal_close{% endtrans %}</button>
            </div>
            {# MODAL:FOOTER #}

        </div>
        {# //MODAL:CONTENT #}

    </div>
    {# //MODAL:DIALOG #}

</div>
{# //MODAL:REMOVE-FILE #}