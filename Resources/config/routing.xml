<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="glavweb_uploader_upload" pattern="/uploader/upload/{context}">
        <default key="_controller">glavweb_uploader.controller.upload:uploadAction</default>
    </route>

    <route id="glavweb_uploader_uploadlink" pattern="/uploader/uploadlink/{context}">
        <default key="_controller">glavweb_uploader.controller.upload:uploadLinkAction</default>
    </route>

    <route id="glavweb_uploader_delete" pattern="/uploader/delete/{context}">
        <default key="_controller">glavweb_uploader.controller.upload:deleteAction</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="glavweb_uploader_rename" pattern="/uploader/rename/{context}">
        <default key="_controller">glavweb_uploader.controller.upload:renameAction</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="glavweb_uploader_progress" pattern="/uploader/progress">
        <default key="_controller">glavweb_uploader.controller.upload:progressAction</default>
    </route>

    <route id="glavweb_uploader_cancel" pattern="/uploader/cancel">
        <default key="_controller">glavweb_uploader.controller.upload:cancelAction</default>
    </route>

</routes>
